<div class="control-group {{#if error}}error{{/if}}"> 
    <label class="control-label">{{label}}</label>
    <div class="controls">
        <select class="{{class}}" name="{{name}}">
        {{#options}}
            <option value="{{value}}" {{#if selected}}selected="selected"{{/if}}>{{label}}</option>
        {{/options}}
        </select>
    
        {{#if error}}
        <span class="help-inline">{{error}}</span>
        {{else}}
            {{#if helpInline}}
                <span class="help-inline">{{{helpInline}}}</span>
            {{/if}}
        {{/if}}
    </div>
</div>