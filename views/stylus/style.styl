body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  a, label
    color: #484848
  .hammerfont
    font-family: 'Hammersmith One', sans-serif;
  .center
    text-align: center
  .neck
    margin: 50px 0 0
    padding: 50px 70px 60px 120px
    background: url('../img/itcloud.jpg')
    background-position: center
    h1
      font-size: 55px;
      text-shadow: 3px 7px 1px rgba(0,0,0, 0.2);
    p
      margin-bottom: 15px;
      font-size: 21px;
      font-weight: 200;
  .logobig
    color: #484848
    text-align: center
    padding-bottom: 20px
  .white
    color: #fff !important
  .our-main-content
    border-top: 1px solid #e7e7e7;
    padding-top: 20px;
    background: url('../img/background.png') no-repeat 50% 0
    .mean-logo
      height:30px;
  .label-danger
    float: right;
    border-radius: 12px;
  .label-close
    float: right;
    border-radius: 20px;
    background: #585858;
    padding: 3px 4px;
    color: #C8C8C8;
    border: 1px solid #565656;
  .btn-forgot, label
    font-size: 14px !important;
  .grp-foot
    background: #E9E9E9;
    margin-bottom: -15px;
    & > div
      padding-top: 0 !important;
      *
        color: #6F6F6F
  .big-preloader
    font-size: 68px
    text-align: center
    padding: 30px 0
    color: #ccc
  .con-avatar
    margin: 0;
    border: 0;
    padding: 0;

#user-panel
  #side
    border-right: 1px solid #4a4a4a
    position: absolute
    top: 0;
    height: 100%;
    left: 0;
    bottom: 0;
    padding: 0;
    background-color: #4a4a4a;
    overflow: hidden;
    //overflow: auto;
    #site-opts
      position: absolute;
      bottom: 0;
      width: 100%;
    .sidebar-nav
      background-color: #4a4a4a
      padding: 0;
      #side-chat-menu
        height: 490px;
        //overflow-y: scroll;
        overflow: hidden
        position: relative;
        li
          a.chat-selector
            padding: 0 15px 0 0;
            border-bottom: 1px solid #5B5B5B;
            img.msg-avatar
              width: 40px;
              height: 40px;
              border-radius: 0;
            .label-close
              margin: 10px 0;
              display: none
            &:hover .label-close
              display: block
      #side-menu, #side-chat-menu
        a
          color:#fff
          img.msg-avatar
            width: 20px
            height: 20px
            border-radius: 20px
          span.d-item-title
            padding-left: 10px
        a:hover
          color:#000
        a.group
          color:#c1c1c1
          background: #3D3D3D;
          border-bottom: 1px solid #5B5B5B;
  #content
    position: absolute;
    top: 0;
    //left: 196px;
    bottom: 0;
    right: 0;
    padding: 0;
    height: 100%;
    overflow: auto;
    #chat
      .chat-header-container
        margin: 0
        background: #fcfcfc
        height: 10%
        border: 0
        border-bottom: 1px solid #ccc
        box-shadow: -8px -17px 7px 18px #ccc
      .chat-msg-container
        width: 100%
        height: 72%
        position: absolute
        //overflow-y: scroll
        //overflow-x: hidden
        overflow: hidden
        .chat-message-table
          display: table;
          width: 100%;
        .chat-message
          padding: 8px
          display: table-row
          & > div
            display: table-cell;
            border-top: 1px solid #e4e4e4
          .msg-author
            width: 20%
            padding: 10px
            & > div
              display: table-cell;
            .msg-author-avatar 
              img.msg-avatar
                width: 40px
                height: 40px
                border-radius: 20px
            .msg-author-name
              padding: 0 10px; 
              a
                text-decoration: underline;
                color: #3C3A3A;
          .msg-content
            padding-bottom: 10px
            width: 80%
      .chat-form
        width: 100%
        height: 13%
        padding: 5px
        position:fixed
        bottom:0
        background: #f9f9f9
        border-top: 1px solid #c0c0c0
        textarea
          width: inherit
          height: 100%;

// Dashboard
.board-container
  margin-top:-20px
  .sidebar-con
    padding-left: 0
    .sidebar-nav
      padding: 20px 0
      & > ul > li
        border-bottom: 1px solid #e7e7e7
      .d-item-title
        padding-left: 10px
.dropdown-menu-bubble-right:before {
  position: absolute;
  top: -7px;
  right: 9px;
  display: inline-block;
  border-right: 7px solid transparent;
  border-bottom: 7px solid #ccc;
  border-left: 7px solid transparent;
  border-bottom-color: rgba(0, 0, 0, 0.2);
  content: '';
}

.dropdown-menu-bubble-right:after {
  position: absolute;
  top: -6px;
  right: 10px;
  display: inline-block;
  border-right: 6px solid transparent;
  border-bottom: 6px solid #ffffff;
  border-left: 6px solid transparent;
  content: '';
}


